<div class="order_details">

  <h3> Pedido <%= @order.code %> </h3>
  <h4>Status - <%= I18n.translate(@order.status) %></h4>
  
  <div>
      <strong>
        <%= Order.human_attribute_name("name") %> :
      </strong>
      <%= @order.name %>
  </div>

  <div>
      <strong>
        <%= Order.human_attribute_name("email") %> :
      </strong>
      <%= @order.email %>
  </div>

  <div>
      <strong>
        <%= Order.human_attribute_name("cpf") %> :
      </strong>
      <%= @order.cpf %>
  </div>

  <div>
      <strong>
        <%= Order.human_attribute_name("phone_number") %> :
      </strong>
      <%= @order.phone_number %>
  </div>

  Itens :
  <% @portions.each do |item| %>
    <div id="<%= item.id %>">
      <p> <%= item.product.name %> : <%= item.description %> | <%= t('portion_price', price: item.dollars) %> </p>
    </div>
  <% end %>

  <div>
    <%= form_with model: @order do |f| %>
      <%= f.label :status, "Alterar status:" %> <br />
      <%= f.select :status, Order.statuses.keys.collect {|status| [I18n.translate(status), status] } %><br />
      <%= f.submit "Alterar" %>
    <% end %>
  </div>

</div>